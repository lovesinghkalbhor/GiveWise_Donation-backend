      <button type="button" onclick="handleConvertToPDF()">
        Download as PDF
      </button>
    </div>

    <script>
      const handleConvertToPDF = () => {
        const container = document.getElementById("container");

        if (!container) {
          console.error(
            "Error: Container element with ID 'container' not found."
          );
          return;
        }

        html2canvas(container, {
          useCORS: true,
          allowTaint: true,
          scale: 1,
        }).then((canvas) => {
          const pdf = new jspdf.jsPDF("p", "mm", "a4");
          const imgData = canvas.toDataURL("image/png");

          const pageWidth = pdf.internal.pageSize.getWidth();
          const pageHeight = pdf.internal.pageSize.getHeight();

          const margin = 10; // Define your margin in millimeters

          let imgWidth = pageWidth - margin * 2; // Calculate image width with margins
          let imgHeight = (canvas.height * imgWidth) / canvas.width;

          // Calculate vertical position to center the image with margins
          let verticalPos = margin;

          // Check if the image height exceeds the page height minus margins
          if (imgHeight > pageHeight - margin * 2) {
            imgHeight = pageHeight - margin * 2;
          }

          pdf.addImage(
            imgData,
            "PNG",
            margin,
            verticalPos,
            imgWidth,
            imgHeight
          );
          pdf.save(`receipt_<%= donation.receiptNo %>.pdf`);
        });
      };
      function capitalizeFirstLetter(text) {
        if (!text) {
          return text; // Return empty or null input as is
        }
        return text.charAt(0).toUpperCase() + text.slice(1);
      }
    </script>
